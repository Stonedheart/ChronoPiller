@model int

@{
    ViewBag.Title = "title";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Provide medicine details</h2>

<div>
    <form method="post">
        <label for="name">Name</label>
        <input name="name" id="name" /><br />
        <label for="startUsageDate">When You should start taking dose</label>
        <input name="startUsageDate" id="startUsageDate" type="date" /><br />
        <label for="interval">How many times a day You should take medicine</label>
        <input name="interval" type="number" id="interval" /><br />
        <label for="dose">How many pills You should take</label>
        <input name="dose" type="number" id="dose" /><br/>
        <label for="prescriptedBoxCount">How many box are prescpripted</label>
        <input type="number" name="prescriptedBoxCount" id="prescriptedBoxCount"/><br/>
        <input type="hidden" name="prescriptionId" value="@Model"/><br/>
        <label for="medicineBoxCapacity">Bought medicine box capacity</label>
        <input type="number" name="medicineBoxCapacity" id="medicineBoxCapacity"/><br/>
        <label for="activeSubstanceAmountInMg">Active substance in mg</label>
        <input type="number" name="activeSubstanceAmountInMg" id="activeSubstanceAmountInMg"/><br/>
        <input type="submit" text="Add Med" />
    </form>
</div>
